{
  "name": "ado-gantt-extension",
  "version": "1.0.0",
  "description": "Gantt Chart extension for Azure DevOps Boards",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "vite build --mode development",
    "build:vite": "vite build",
    "dev": "vite",
    "dev:webpack": "webpack serve --mode development",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "package": "tfx extension create --rev-version",
    "package:dev": "tfx extension create --rev-version --manifests vss-extension.json --overrides-file configs/dev.json",
    "publish": "tfx extension publish",
    "publish:dev": "tfx extension publish --manifests vss-extension.json --overrides-file configs/dev.json",
    "lint": "eslint src/**/*.ts*",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "postversion": "echo 'Remember to update vss-extension.json version and run: git add . && git commit -m \"chore(release): bump version\"'"
  },
  "dependencies": {
    "azure-devops-extension-api": "^2.225.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wx-react-gantt": "^1.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "tfx-cli": "^0.17.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.3"
  },
  "keywords": [
    "azure-devops",
    "extension",
    "gantt",
    "boards",
    "work-items",
    "timeline",
    "roadmap"
  ],
  "author": "Martin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/ado-gantt.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ado-gantt/issues"
  },
  "homepage": "https://github.com/your-org/ado-gantt#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
